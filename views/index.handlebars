<div class="container p-5">
    <h1 class="display-4 text-center mb-3">Eat-Da-Burger</h1>

    <div class="row">
        <div class="col-12 col-lg-4 mb-4">
            <div class="row">
                <div class="col-11">
                    <h3 class="mb-4">{{title}} a burger:</h3>

                    <form action="{{action}}" method="POST">
                        <div class="form-group py-3 mb-4">
                            <label for="burger_name">Burger name</label>
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="text" class="form-control form-control-lg" id="burger_name" name="name" value="{{name}}" required>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="button_submit" title="Click to submit.">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 mb-5">
            <h3 class="mb-4">Burgers:</h3>

            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="row mb-2 burgers">
                        <div class="col-11 col-lg-10">
                            <form action="/{{this.id}}/1?_method=PATCH" method="POST">
                                <input type="hidden" name="name" value="{{this.name}}">
                                <button type="submit" class="btn btn-warning burgers_not_devoured" title="Click to devour the {{this.name}} burger!">{{this.name}}</button>
                            </form>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-link" title="Click to delete the {{this.name}} burger."><i class="fa fa-trash" style="color:rgb(221, 17, 17);" aria-hidden="true"></i></button>
                            </form>

                            <form action="/{{this.id}}" method="GET">
                                <button type="submit" class="btn btn-link" title="Click to edit the {{this.name}} burger."><i class="fa fa-pencil-square" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-12 col-lg-4 mb-5">
            <h3 class="mb-4">Devoured:</h3>

            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="row mb-2 burgers">
                        <div class="col-11 col-lg-10">
                            <button type="button" class="btn btn-success burgers_devoured">{{this.name}}</button>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-link" title="Click to delete the {{this.name}} burger."><i class="fa fa-trash" style="color:rgb(221, 17, 17);" aria-hidden="true"></i></button>
                            </form>

                            <form action="/{{this.id}}" method="GET">
                                <button type="submit" class="btn btn-link" title="Click to edit the {{this.name}} burger."><i class="fa fa-pencil-square" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <hr>
    
    <footer class="text-center pt-2">
        <i aria-hidden="true"></i> 2020 by UT Full Stack Coding Boot Camp
    </footer>
</div>